{
  "name": "natter",
  "productName": "natter",
  "version": "0.0.1",
  "description": "Pluggable voice recognition for every desktop environment",
  "main": "src/main.js",
  "scripts": {
    "start": "NODE_ENV=development DEBUG=true electron-forge start",
    "demo": "NODE_ENV=production electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --cache --color --ext .jsx,.js src",
    "test-services": "NODE_ENV=test mocha 'test/services/**/*.js' --compilers js:@babel/register",
    "test-integration": "NODE_ENV=test mocha 'test/integration/**/*.js' --compilers js:@babel/register"
  },
  "keywords": [],
  "author": "simon",
  "license": "MIT",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm"
      },
      "electronWinstallerConfig": {
        "name": "natter"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "simonireilly",
        "name": "natter"
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "natter"
      }
    }
  },
  "dependencies": {
    "electron-compile": "^6.4.4",
    "electron-devtools-installer": "^2.2.4",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^2.0.0",
    "grpc": "^1.17.0",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-hot-loader": "^3.1.3",
    "robotjs": "^0.5.1",
    "semantic-ui-react": "^0.84.0",
    "simple-text-parser": "^1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/register": "^7.0.0",
    "@google-cloud/speech": "^2.1.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-es2015-classes": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "electron": "^4.0.1",
    "electron-forge": "^5.2.3",
    "electron-prebuilt-compile": "4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.12.3",
    "mocha": "^5.2.0",
    "node-record-lpcm16": "^0.3.1",
    "sinon": "^7.2.3",
    "spectron": "^5.0.0"
  }
}
